# Environment Configuration for Tenant Dashboard
# Copy this file to .env and fill in your actual values

# Flask Environment (production or development)
FLASK_ENV=production

# Secret Key for Flask Sessions (Generate a strong random key)
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# OpenAI API Configuration
# OPENAI_API_KEY=your_openai_api_key_here  # Will be read from Windows environment variables

# Email Configuration for SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
# SENDER_PASSWORD=your_gmail_app_password  # Will be read from Windows environment variables
# SENDER_EMAIL=your_gmail_address@gmail.com  # Optional: only needed if not configured in Gmail Settings
# SENDER_NAME=Tenant Dashboard               # Optional: only needed if not configured in Gmail Settings

# Default Admin User Configuration
# This will be used to create the initial admin user
DEFAULT_ADMIN_PASSWORD=tenant_pw_123

# Application Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Security Settings (for production)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
